from Bio import SeqIO

#Contig Solving
List = []

for record in SeqIO.parse("all_PPS_contigs 1.fasta", "fasta"):
    List.append(record)
    #ORF
for Contig in List:
    for Frame in Frames:
        Contig_Frame = Contig[Frame:]
        print()
        for i in range(len(Contig_Frame)):
            if Contig_Frame[i*3:(i*3)+3].seq in Stop_Codons:
                if(i*3-Location) > ORF_Cutoff and Location != 0:
                    ORFs.append(str(Contig_Frame[Location:(i*3)+3].seq))
                Location = i*3
            if Contig_Frame[i*3:i*3+3].seq == Met:
                Start_Codons.append(i)
        Location = 0
        print(ORFs)
