def Get_Sequence():

    Target = SeqIO.read("/Users/siddarthraghuvanshi/Documents/Code/CRISPR_Guide_RNA/Fasta_Files/GFP.fasta", 'fasta' )
    Genome = SeqIO.read("/Users/siddarthraghuvanshi/Documents/GitHub/guideRNA_finder/virD2.fa", 'fasta' )

    Genome = Genome + SeqIO.read("/Users/siddarthraghuvanshi/Documents/Code/CRISPR_Guide_RNA/Fasta_Files/GFP.fasta", 'fasta')

    return Target.seq.upper(), Genome

Target_Seq, Genome = Get_Sequence()

SeqIO.write(Genome, "Total_G", "fasta")
